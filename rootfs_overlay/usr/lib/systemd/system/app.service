[Unit]
Description=App service
ConditionPathIsDirectory=/root/app
Requires=network.target dbus.service

[Service]
Type=oneshot
#BusName=org.bluez
ExecStart=/root/app/start.sh
SendSIGKILL=Yes
RemainAfterExit=Yes
#ExecStop=/root/app/stop.sh
TimeoutStopSec=5
KillMode=1
#NotifyAccess=main
#WatchdogSec=10
#Restart=on-failure
#CapabilityBoundingSet=CAP_NET_ADMIN CAP_NET_BIND_SERVICE
LimitNPROC=1
#ProtectHome=true
#ProtectSystem=full

[Install]
WantedBy=multi-user.target
#Alias=app.service
